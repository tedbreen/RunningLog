<header>
  <h1>Add a run</h1>
</header>

<div class="container">
  <form>
    <h4>Type</h4>
    <input type="radio" name="run[run_type]" id="type-run" value="0">
    <label for="type-run">Run</label>
    <input type="radio" name="run[run_type]" id="type-long" value="1">
    <label for="type-run">Long run</label>
    <input type="radio" name="run[run_type]" id="type-workout" value="2">
    <label for="type-run">Workout</label>
    <input type="radio" name="run[run_type]" id="type-race" value="3">
    <label for="type-run">Race</label>


    <br>

    <h4>Name of run<h4>
    <input type="text" name="run[title]">

    <br>

    <h4>Location</h4>
    <label>City<input type="text" name="run[city]"></label>
    <label>State<input type="text" name="run[state]"></label

    <br>

    <h4>Date & Time</h4>
    <label>Year<input type="text" name="run[year]"></label>
    <label>Month<input type="text" name="run[mon]"></label>
    <label>Day<input type="text" name="run[day]"></label>
    <br>
    <label>Hour<input type="text" name="run[hr]"></label>
    <label>Minute<input type="text" name="run[min]"></label>
    <label>Time Zone
      <input type="text"
             name="run[offset]"
             value="-08:00">
    </label>

    <br>
    <h4>Distance</h4>
    <label>Distance<input type="text" name="run[distance]"></label>

    <br>

    <h4>Duration (optional)</h4>
    <label>Hours<input type="text" name="run[d_hr]"></label>
    <label>Minutes<input type="text" name="run[d_min]"></label>
    <label>Seconds<input type="text" name="run[d_sec]"></label>

    <br>

    <h4>Sneaker (optional)</h4>
    <input type="text" name="run[sneaker_id]">

    <br>

    <h4>Description (optional)<h4>
    <textarea name="run[description]"></textarea>

    <br>

    <input type="submit" value="Submit">
</div>